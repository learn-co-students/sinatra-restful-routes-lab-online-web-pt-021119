<h1>Edit Recipe <%=@recipe.name%></h1>
<h3>Ingredients</h3>
<p><%=@recipe.ingredients%></p>
<h3>Cook Time</h3>
<p><%=@recipe.cook_time%> minutes</p>

 <h3>Edit: </h3>

 <form action="/patch/<%=@recipe.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">

   <p><label for="name">Recipe Name: </label>
      <input type="text" name="name" id="name"></p>
  <p><label for="ingredients">Ingredients: </label>
      <input type="text" name="ingredients" id="ingredients"></p>
  <p><label for="cook_time">Cook Time: </label>
      <input type="text" name="cook_time" id="cook_time"></p>

   <input type="submit" value="Edit" id="submit">

 </form>